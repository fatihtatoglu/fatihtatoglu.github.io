<section class="contact-form-shell">
  <form
    class="contact-form"
    data-contact-form
    data-contact-valid-fullname="{{i18n.contactForm.validation.fullnameRequired}}"
    data-contact-valid-email="{{i18n.contactForm.validation.emailRequired}}"
    data-contact-valid-email-invalid="{{i18n.contactForm.validation.emailInvalid}}"
    data-contact-valid-subject="{{i18n.contactForm.validation.subjectRequired}}"
    data-contact-valid-message="{{i18n.contactForm.validation.messageRequired}}"
    data-contact-valid-privacy="{{i18n.contactForm.validation.privacyRequired}}"
    data-contact-service-success="{{i18n.contactForm.service.success}}"
    data-contact-service-error="{{i18n.contactForm.service.error}}"
    novalidate>
    <div class="grid gap-4 md:grid-cols-2">
      <div class="contact-form__field">
        <label class="contact-form__label" for="contact-fullname-{{front.id}}">
          {{i18n.contactForm.fields.fullname.label}}
        </label>
        <input
          id="contact-fullname-{{front.id}}"
          name="fullname"
          type="text"
          class="contact-form__input"
          placeholder="{{i18n.contactForm.fields.fullname.placeholder}}"
          autocomplete="name"
          data-contact-input="fullname"
          required />
        <p class="contact-form__error" data-contact-error="fullname" aria-live="polite"></p>
      </div>

      <div class="contact-form__field">
        <label class="contact-form__label" for="contact-email-{{front.id}}">
          {{i18n.contactForm.fields.email.label}}
        </label>
        <input
          id="contact-email-{{front.id}}"
          name="email"
          type="email"
          class="contact-form__input"
          placeholder="{{i18n.contactForm.fields.email.placeholder}}"
          autocomplete="email"
          data-contact-input="email"
          required />
        <p class="contact-form__error" data-contact-error="email" aria-live="polite"></p>
      </div>
    </div>

    <div class="contact-form__field">
      <label class="contact-form__label" for="contact-subject-{{front.id}}">
        {{i18n.contactForm.fields.subject.label}}
      </label>
      <div class="contact-form__select-wrapper">
        <select
          id="contact-subject-{{front.id}}"
          name="subject"
          class="contact-form__select"
          data-contact-input="subject"
          required>
          <option value="" selected disabled hidden>
            {{i18n.contactForm.fields.subject.placeholder}}
          </option>
          <option value="general">{{i18n.contactForm.subjectOptions.general}}</option>
          <option value="content">{{i18n.contactForm.subjectOptions.content}}</option>
          <option value="suggestion">{{i18n.contactForm.subjectOptions.suggestion}}</option>
          <option value="question">{{i18n.contactForm.subjectOptions.question}}</option>
          <option value="collab">{{i18n.contactForm.subjectOptions.collab}}</option>
          <option value="other">{{i18n.contactForm.subjectOptions.other}}</option>
        </select>
        <span class="contact-form__select-icon" aria-hidden="true">⌄</span>
      </div>
      <p class="contact-form__error" data-contact-error="subject" aria-live="polite"></p>
    </div>

    <div class="contact-form__field">
      <label class="contact-form__label" for="contact-message-{{front.id}}">
        {{i18n.contactForm.fields.message.label}}
      </label>
      <div class="contact-form__textarea-wrapper">
        <textarea
          id="contact-message-{{front.id}}"
          name="message"
          class="contact-form__textarea"
          placeholder="{{i18n.contactForm.fields.message.placeholder}}"
          rows="6"
          maxlength="1000"
          data-contact-input="message"
          data-contact-max="1000"
          required></textarea>
        <span class="contact-form__counter" data-contact-counter>0 / 1000</span>
      </div>
      <p class="contact-form__error" data-contact-error="message" aria-live="polite"></p>
    </div>

    <div>
      <div class="contact-form__checkbox">
        <input
          id="contact-privacy-{{front.id}}"
          type="checkbox"
          name="privacy"
          class="contact-form__checkbox-input"
          data-contact-input="privacy"
          required />
        <label for="contact-privacy-{{front.id}}" class="contact-form__privacy-label">
          {{i18n.contactForm.privacy.label}}
          <span class="contact-form__privacy-highlight">
            {{i18n.contactForm.privacy.helper}}
          </span>
        </label>
      </div>
      <p class="contact-form__error" data-contact-error="privacy" aria-live="polite"></p>
    </div>

    <div class="contact-form__actions">
      <button
        type="submit"
        class="btn btn--fill btn--thick btn--tone-brand contact-form__action"
        data-contact-submit
        data-contact-submit-loading="{{i18n.contactForm.actions.loading}}"
        disabled>
        {{i18n.contactForm.actions.submit}}
      </button>
      <button
        type="reset"
        class="btn btn--tone-neutral btn--thick contact-form__action contact-form__reset">
        {{i18n.contactForm.actions.reset}}
      </button>
    </div>
  </form>

  <div class="contact-modal-overlay" data-contact-modal-overlay hidden></div>
  <div
    class="contact-modal"
    role="dialog"
    aria-modal="true"
    aria-labelledby="contact-modal-title-{{front.id}}"
    aria-describedby="contact-modal-message-{{front.id}}"
    data-contact-modal
    data-contact-modal-success-title="{{i18n.contactForm.modal.successTitle}}"
    data-contact-modal-success-message="{{i18n.contactForm.modal.successMessage}}"
    data-contact-modal-error-title="{{i18n.contactForm.modal.errorTitle}}"
    data-contact-modal-error-message="{{i18n.contactForm.modal.errorMessage}}"
    hidden>
    <div class="contact-modal__icon" data-contact-modal-icon aria-hidden="true">✓</div>
    <h3 class="contact-modal__title" id="contact-modal-title-{{front.id}}" data-contact-modal-title>
      {{i18n.contactForm.modal.successTitle}}
    </h3>
    <p class="contact-modal__message" id="contact-modal-message-{{front.id}}" data-contact-modal-message>
      {{i18n.contactForm.modal.successMessage}}
    </p>
    <button
      type="button"
      class="btn btn--fill btn--tone-brand btn--thick btn--full"
      data-contact-modal-close>
      {{i18n.ui.close}}
    </button>
  </div>
</section>
