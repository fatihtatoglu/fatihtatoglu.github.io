    {{/footer.policies}}
    </div>

    <div class="footer-social">
    {{#footer.social}}
      <a class="btn btn--md btn--tone-brand btn--icon-left btn--tone-{{tone}}" href="{{{url}}}"
        {{#external}}rel="noopener noreferrer" target="_blank"{{/external}}>
        {{{icon}}}
        <span data-i18n="footer.social.{{key}}" lang="{{lang}}">{{label}}</span>
      </a>
    {{/footer.social}}
    </div>

    <p class="copyright">
      Â© <span data-year>{{site.year}}</span> - <span data-i18n="footer.tagline">{{footer.tagline}}</span>
    </p>
