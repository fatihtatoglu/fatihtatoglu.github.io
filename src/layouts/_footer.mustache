<footer class="site-footer text-sm text-[var(--muted)]">
  <div
    class="flex flex-col gap-3 rounded-2xl border border-[var(--brand-900)] bg-[var(--bg-elev)]/95 p-4 shadow-soft backdrop-blur">
    <div>
      <ul class="flex flex-wrap items-center justify-center gap-3 text-xs font-medium">
        {{#footer.tags}}
          <li>
            <a class="btn btn--fill btn--xs btn--thin btn--tone-sage" href="{{{url}}}" data-i18n="footer.tags.{{key}}">
              {{label}}
            </a>
          </li>
        {{/footer.tags}}
      </ul>
    </div>

    <div
      class="flex flex-wrap justify-center gap-x-6 gap-y-1 mt-2 text-center text-[0.65rem] font-semibold uppercase tracking-[0.3em] text-[var(--muted)] mb-0">
      {{#footer.policies}}
        <a class="btn btn--text btn--thin btn--tone-neutral policy-link" href="{{{url}}}"
          data-i18n="footer.policies.{{key}}">
          {{label}}
        </a>
      {{/footer.policies}}
    </div>

    <div class="flex flex-wrap justify-center gap-3 text-sm mt-2 text-[var(--ink)]">
      {{#footer.social}}
        <a class="btn btn--fill btn--sm btn--thick btn--tone-{{tone}}" data-social="{{key}}" href="{{{url}}}"
          {{#external}}rel="noopener noreferrer" target="_blank"{{/external}}>
          {{{icon}}}
          <span data-i18n="footer.social.{{key}}">{{label}}</span>
        </a>
      {{/footer.social}}
    </div>

    <p class="text-xs text-center mt-2 text-[var(--muted)]">
      Â© <span data-year>{{site.year}}</span> - <span data-i18n="footer.tagline">{{footer.tagline}}</span>
    </p>
  </div>
</footer>
