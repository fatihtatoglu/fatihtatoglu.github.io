<header class="site-header">
  <div class="header-wrapper">

    <div class="header-bar">
      <div class="header-bar-wrapper">
        <a href="{{{site.home}}}" class="owner" data-i18n="site.owner" lang="{{lang}}"
          data-metric
          data-metric-name="header_home_click"
          data-metric-source="header">
          {{site.owner}}
        </a>
        <p class="role" data-i18n="site.role" lang="{{lang}}">
          {{site.role}}
        </p>
      </div>
      
      <div class="header-buttons">
        <theme-switcher></theme-switcher>
        <language-switcher></language-switcher>
        <button type="button" class="menu-button btn btn--md btn--tone-neutral btn--icon" aria-label="{{i18n.ui.menuToggle}}" data-menu-button aria-controls="primary-menu" aria-expanded="false" data-i18n-attrs="aria-label:ui.menuToggle"
          data-metric
          data-metric-name="menu_toggle"
          data-metric-source="header">
            <svg aria-hidden="true">
              <use href="/assets/svg/icons.svg#icon-menu"></use>
            </svg>
        </button>
      </div>
    </div>

    <div class="menu-drawer" data-menu-panel id="primary-menu" hidden>
      {{#site.features.search}}
      <input id="site-search" type="search" placeholder="{{i18n.menu.searchPlaceholder}}" class="search-field"
        data-i18n="menu.searchPlaceholder" />
      {{/site.features.search}}
      <nav aria-label="{{i18n.menu.primary}}" data-i18n-attrs="aria-label:menu.primary">
        <ul class="menu-list">
          {{#menu.items}}
            <li>
              <a class="btn btn--tone-neutral menu-link{{#isActive}} is-active{{/isActive}}"
                href="{{{url}}}" data-menu-link="{{key}}" data-i18n="menu.{{key}}"{{#isActive}} aria-current="page"{{/isActive}}
                data-analytics="open_page" lang="{{lang}}"
                data-metric
                data-metric-name="menu_click"
                data-metric-source="header"
                data-metric-meta-key="{{key}}">
                {{label}}
              </a>
            </li>
          {{/menu.items}}
          <li class="theme-button"><theme-switcher></theme-switcher></li>
          <li class="language-button"><language-switcher></language-switcher></li>
        </ul>
      </nav>
    </div>

    <div class="menu-overlay" data-menu-overlay hidden></div>

    <p class="slogan" data-i18n="site.quote">{{site.quote}}</p>
  </div>
</header>
