<!doctype html>
<html
  lang="{{lang}}"
  class="h-full"
  data-theme="{{theme}}"
  data-supported-languages="{{site.languagesCsv}}"
  data-default-language="{{site.defaultLanguage}}"
  data-base-url="{{site.url}}"
  data-pagination-page-size="{{site.pagination.pageSize}}"
  data-pagination-max-pages="{{site.pagination.maxPages}}"
>

<head>
  {{> partials/_head }}
</head>

<body data-active-menu="{{menu.activeKey}}">
  {{> partials/_noscript }}
  <a class="skip-link" href="#content" data-i18n="ui.skipToContent">
    {{i18n.ui.skipToContent}}
  </a>

  <div class="app-shell max-w-[480px]">
    <div class="header-sentinel" data-header-sentinel aria-hidden="true"></div>
    {{> partials/_header }}

    <main id="content" class="site-content flex-1">
      {{{content}}}
    </main>

    {{> partials/_footer }}
  </div>

  <script type="module" src="/output.js"></script>
  {{#scripts.body}}
    {{{.}}}
  {{/scripts.body}}
</body>

</html>
