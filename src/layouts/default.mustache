<!doctype html>
<html lang="{{lang}}" class="h-full" data-theme="{{theme}}" data-supported-languages="{{site.languagesCsv}}"
  data-default-language="{{site.defaultLanguage}}" data-base-url="{{site.url}}">

<head>
  {{> partials/_head }}
</head>

<body class="min-h-dvh bg-[var(--bg)] font-sans text-base text-[var(--ink)] antialiased">
  {{> partials/_noscript }}
  <a class="skip-link" href="#content" data-i18n="ui.skipToContent">
    {{i18n.ui.skipToContent}}
  </a>

  <div class="app-shell mx-auto flex min-h-dvh w-full max-w-[480px] flex-col">
    <div class="header-sentinel" data-header-sentinel aria-hidden="true"></div>
    {{> partials/_header }}

    <main id="content"
      class="site-content flex-1">
      {{{content}}}
    </main>

    {{> partials/_footer }}
  </div>

  <script type="module" src="/output.js"></script>
  {{#scripts.body}}
    {{{.}}}
  {{/scripts.body}}
</body>

</html>
