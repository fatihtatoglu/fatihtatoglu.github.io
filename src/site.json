{
  "identity": {
    "author": "Fatih Tatoğlu",
    "email": "fatih@tatoglu.net",
    "url": "https://tatoglu.net",
    "themeColor": "#5a8df0",
    "profileImage": "~/assets/images/fatih_tatoglu.webp",
    "social": {
      "github": "https://github.com/fatihtatoglu",
      "linkedin": "https://www.linkedin.com/in/fatihtatoglu/",
      "instagram": "https://www.instagram.com/fatihtatoglu/",
      "x": "https://x.com/fatihtatoglu"
    }
  },
  "analytics": {
    "enabled": true,
    "gtmId": "GTM-5WHLJZ6Z",
    "gaId": "G-R2SETB688N",
    "clarityId": "ubkn3xooz5"
  },
  "seo": {
    "defaultImage": "~/assets/images/fatih_tatoglu_cover.webp",
    "includeCollections": true,
    "includePaging": false,
    "footerTagCount": 12
  },
  "robots": {
    "allow": [
      "/"
    ],
    "disallow": [
      "/drafts/",
      "/assets/files/"
    ]
  },
  "build": {
    "minify": false,
    "debug": true,
    "pageBufferLimit": 20,
    "outputAliases": [
      {
        "from": "~/404/",
        "to": "~/404.html"
      },
      {
        "from": "~/en/404/",
        "to": "~/en/404.html"
      }
    ]
  },
  "features": {
    "postOperations": {
      "enabled": true,
      "apiBase": "https://post-ops.fatihtatoglu.workers.dev",
      "like": true,
      "dislike": true,
      "comment": true,
      "turnstileSiteKey": "0x4AAAAAACLgAWMMwkeVPTUK",
      "share": {
        "enabled": true,
        "whatsapp": true,
        "x": true,
        "linkedin": true,
        "facebook": true,
        "copy": true
      }
    },
    "search": false
  },
  "markdown": {
    "highlight": true
  },
  "content": {
    "pagination": {
      "pageSize": 10,
      "segment": {
        "tr": "sayfa",
        "en": "page"
      }
    },
    "languages": {
      "default": "tr",
      "supported": [
        "tr",
        "en"
      ],
      "canonical": {
        "tr": "{base}/",
        "en": "{base}/en/"
      }
    },
    "collections": {
      "includeContentFile": false,
      "tags": {
        "template": "collection",
        "types": [
          "tag"
        ],
        "slugPattern": {
          "tr": "etiket/{{key}}",
          "en": "tag/{{key}}"
        },
        "pairs": {
          "docker": {
            "tr": "docker",
            "en": "docker"
          }
        }
      },
      "series": {
        "template": "collection",
        "types": [
          "series"
        ],
        "slugPattern": {
          "tr": "yazi-dizisi/{{key}}",
          "en": "series/{{key}}"
        }
      }
    }
  },
  "plugins": [
    "@shevky/plugin-robots-txt",
    "@shevky/plugin-tailwindcss",
    "@shevky/plugin-esbuild",
    "@shevky/plugin-rss",
    "@shevky/plugin-sitemap",
    "@shevky/plugin-open-graph"
  ],
  "pluginConfigs": {
    "shevky-sitemap": {
      "sitemapFilename": "sitemap.xml"
    },
    "shevky-rss": {
      "feedFilename": "feed.xml",
      "feedTtl": 1440,
      "feedItemCount": 50
    },
    "shevky-open-graph": {
      "twitterSite": "@fatihtatoglu",
      "publisherType": "personal",
      "defaultImage": "~/assets/images/fatih_tatoglu_cover.webp",
      "defaultTwitterCard": "summary_large_image",
      "siteName": "Fatih Tatoğlu",
      "force": false,
      "contact": {
        "emails": {
          "general": "fatih@tatoglu.net"
        }
      }
    }
  }
}