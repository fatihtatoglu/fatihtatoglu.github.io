{
  "identity": {
    "author": "Fatih TatoÄŸlu",
    "email": "fatih@tatoglu.net",
    "url": "https://tatoglu.net",
    "themeColor": "#5a8df0"
  },
  "analytics": {
    "enabled": true,
    "gtmId": "GTM-5WHLJZ6Z",
    "gaId": "G-R2SETB688N",
    "clarityId": "ubkn3xooz5"
  },
  "seo": {
    "defaultImage": "~/assets/images/fatih_tatoglu_cover.webp",
    "includeCollections": true,
    "includePaging": false
  },
  "robots": {
    "allow": [
      "/"
    ],
    "disallow": [
      "/drafts/"
    ]
  },
  "build": {
    "minify": true,
    "debug": false
  },
  "features": {
    "postOperations": {
      "enabled": true,
      "like": false,
      "dislike": false,
      "comment": false,
      "share": {
        "enabled": true,
        "whatsapp": true,
        "x": true,
        "linkedin": true,
        "facebook": true,
        "copy": true
      }
    },
    "search": false
  },
  "markdown": {
    "highlight": true
  },
  "content": {
    "pagination": {
      "pageSize": 5,
      "segment": {
        "tr": "sayfa",
        "en": "page"
      }
    },
    "languages": {
      "default": "tr",
      "supported": [
        "tr",
        "en"
      ]
    },
    "collections": {
      "tags": {
        "template": "collection",
        "types": [
          "tag"
        ],
        "slugPattern": {
          "tr": "etiket/{{key}}",
          "en": "tag/{{key}}"
        },
        "pairs": {
          "docker": {
            "tr": "docker",
            "en": "docker"
          }
        }
      },
      "series": {
        "template": "collection",
        "types": [
          "series"
        ],
        "slugPattern": {
          "tr": "series/{{key}}",
          "en": "series/{{key}}"
        }
      }
    }
  }
}
