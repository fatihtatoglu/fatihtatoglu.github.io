{
  "identity": {
    "author": "Fatih TatoÄŸlu",
    "email": "fatih@tatoglu.net",
    "url": "http://localhost:3000",
    "themeColor": "#5a8df0",
    "social": {
      "github": "https://github.com/fatihtatoglu",
      "linkedin": "https://www.linkedin.com/in/fatihtatoglu/",
      "instagram": "https://www.instagram.com/fatihtatoglu/",
      "x": "https://x.com/fatihtatoglu"
    }
  },
  "analytics": {
    "enabled": false,
    "gtmId": "GTM-5WHLJZ6Z",
    "gaId": "G-R2SETB688N",
    "clarityId": "ubkn3xooz5"
  },
  "seo": {
    "defaultImage": "~/assets/images/fatih_tatoglu_cover.webp",
    "includeCollections": true,
    "includePaging": false,
    "footerTagCount": 12
  },
  "robots": {
    "allow": [
      "/"
    ],
    "disallow": [
      "/drafts/",
      "/assets/files/"
    ]
  },
  "build": {
    "minify": true,
    "debug": false
  },
  "features": {
    "postOperations": {
      "enabled": true,
      "apiBase": "https://post-ops.fatihtatoglu.workers.dev",
      "like": true,
      "dislike": true,
      "comment": true,
      "share": {
        "enabled": true,
        "whatsapp": true,
        "x": true,
        "linkedin": true,
        "facebook": true,
        "copy": true
      }
    },
    "search": false
  },
  "markdown": {
    "highlight": true
  },
  "content": {
    "pagination": {
      "pageSize": 5,
      "segment": {
        "tr": "sayfa",
        "en": "page"
      }
    },
    "languages": {
      "default": "tr",
      "supported": [
        "tr",
        "en"
      ],
      "canonical": {
        "tr": "{base}/",
        "en": "{base}/en/"
      }
    },
    "collections": {
      "tags": {
        "template": "collection",
        "types": [
          "tag"
        ],
        "slugPattern": {
          "tr": "etiket/{{key}}",
          "en": "tag/{{key}}"
        },
        "pairs": {
          "docker": {
            "tr": "docker",
            "en": "docker"
          }
        }
      },
      "series": {
        "template": "collection",
        "types": [
          "series"
        ],
        "slugPattern": {
          "tr": "yazi-dizisi/{{key}}",
          "en": "series/{{key}}"
        }
      }
    }
  }
}
