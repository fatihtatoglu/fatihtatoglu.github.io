<section class="category">
  {{#content.html}}
  <div class="collection-content">
  {{{.}}}
  </div>
  {{/content.html}}

  {{^content.html}}
  <div class="collection-content no-content">
    <h1 lang="{{lang}}">
      {{#front.listHeading}}{{.}}{{/front.listHeading}}
      {{^front.listHeading}}
        {{#front.title}}{{.}}{{/front.title}}
        {{^front.title}}{{listing.heading}}{{/front.title}}
      {{/front.listHeading}}
    </h1>
  </div>
  {{/content.html}}

  {{#listing.hasItems}}
    <div class="category-listing">
    {{#listing.items}}
    {{> components/component_post-card }}
    {{/listing.items}}
    </div>
  {{/listing.hasItems}}

  {{^listing.hasItems}}
    <p class="text-sm text-center text-[--muted] italic">
      {{#listing.emptyMessage}}{{.}}{{/listing.emptyMessage}}
      {{^listing.emptyMessage}}
        {{i18n.category.emptyFallback}}
      {{/listing.emptyMessage}}
    </p>
  {{/listing.hasItems}}

  {{> components/component_pagination }}
</section>
