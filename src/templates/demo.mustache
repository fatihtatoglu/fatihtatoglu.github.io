<style>
    .demo-wrapper {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .demo-breakpoint-indicator {
      border: 1px solid var(--border);
      border-radius: 999px;
      padding: 0.4rem 1.05rem;
      font-family: var(--font-mono);
      font-size: 0.85rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.35rem;
      background: var(--bg);
      color: var(--muted);
      width: fit-content;
      margin: 0 auto 1.5rem;
    }

    .demo-breakpoint-indicator span {
      display: none;
      color: var(--ink);
    }

    .demo-breakpoint-indicator span[data-breakpoint="mobile"] {
      display: inline;
    }

    @media (min-width: 640px) {
      .demo-breakpoint-indicator span[data-breakpoint="mobile"] {
        display: none;
      }

      .demo-breakpoint-indicator span[data-breakpoint="tablet"] {
        display: inline;
      }
    }

    @media (min-width: 1024px) {
      .demo-breakpoint-indicator span[data-breakpoint="tablet"] {
        display: none;
      }

      .demo-breakpoint-indicator span[data-breakpoint="laptop"] {
        display: inline;
      }
    }

    .demo-section {
      border: 1px dashed var(--border);
      border-radius: var(--radius-lg);
      padding: 1.5rem;
      background: color-mix(in srgb, var(--bg) 92%, transparent);
    }

    .demo-section h2 {
      font-family: var(--font-mono);
      font-size: 0.9rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: var(--muted);
      margin-bottom: 1rem;
    }

    .demo-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 1rem;
    }

    .demo-token {
      border: 1px solid var(--border);
      border-radius: var(--radius-md);
      padding: 1rem;
      background: var(--bg);
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
    }

    .demo-token code {
      font-family: var(--font-mono);
      font-size: 0.85rem;
      color: var(--muted);
    }

    .demo-swatch {
      width: 100%;
      height: 64px;
      border-radius: var(--radius-md);
      border: 1px solid color-mix(in srgb, var(--border) 60%, transparent);
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.12);
    }

    .demo-font-sample {
      font-size: 1.1rem;
      line-height: 1.3;
    }

    .demo-radius {
      width: 72px;
      height: 40px;
      border: 1px solid var(--border);
      background: var(--bg-elev);
    }

    .demo-spacing {
      height: 12px;
      border-radius: 999px;
      background: var(--brand-300);
    }

    .demo-shell {
      border: 1px solid var(--brand-200);
      border-radius: var(--radius-lg);
      padding: var(--shell-gutter);
      display: inline-flex;
      flex-direction: column;
      gap: var(--shell-footer-gap);
      background: var(--bg);
    }

    .demo-alert-list {
      display: flex;
      flex-direction: column;
      gap: 0.85rem;
    }

    .demo-alert {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      border-radius: var(--radius-md);
      padding: 0.85rem 1rem;
      border: 1px solid var(--border);
      background: var(--bg-elev);
      font-size: 0.95rem;
    }

    .demo-alert[data-tone="success"] {
      border-color: color-mix(in srgb, var(--ok) 60%, transparent);
      background: color-mix(in srgb, var(--ok) 15%, transparent);
    }

    .demo-alert[data-tone="warning"] {
      border-color: color-mix(in srgb, var(--warn) 60%, transparent);
      background: color-mix(in srgb, var(--warn) 15%, transparent);
    }

    .demo-alert[data-tone="error"] {
      border-color: color-mix(in srgb, var(--err) 60%, transparent);
      background: color-mix(in srgb, var(--err) 15%, transparent);
    }

    .demo-alert-icon {
      flex-shrink: 0;
      width: 32px;
      height: 32px;
      border-radius: 999px;
      display: grid;
      place-items: center;
      color: var(--invert-ink);
    }

    .demo-alert[data-tone="success"] .demo-alert-icon {
      background: var(--ok);
    }

    .demo-alert[data-tone="warning"] .demo-alert-icon {
      background: var(--warn);
      color: var(--ink);
    }

    .dark .demo-alert[data-tone="warning"] .demo-alert-icon {
      color: var(--invert-ink);
    }

    .demo-alert[data-tone="error"] .demo-alert-icon {
      background: var(--err);
    }

    .demo-alert strong {
      display: block;
      font-size: 0.85rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: var(--muted);
      margin-bottom: 0.25rem;
    }
  </style>

