<section class="category home" data-content-id="home">
  {{{content.html}}}

  {{#listing.hasItems}}
    {{#listing.items}}
    {{> components/component_post-card }}
    {{/listing.items}}
  {{/listing.hasItems}}

  {{^listing.hasItems}}
    <p class="text-sm text-center text-[var(--muted)] italic">
      {{#listing.emptyMessage}}{{.}}{{/listing.emptyMessage}}
      {{^listing.emptyMessage}}
        {{i18n.category.emptyFallback}}
      {{/listing.emptyMessage}}
    </p>
  {{/listing.hasItems}}

  {{> components/component_pagination }}
</section>
