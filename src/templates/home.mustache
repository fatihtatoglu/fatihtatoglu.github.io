<section class="category" data-page-template="home" data-paginated-list>
  {{{content.html}}}

  {{#listing.hasItems}}
    {{#listing.items}}
    <article id="post-{{id}}" class="post-card" data-page-template="post" data-id="{{id}}" data-paginated-item>
      <!-- Post Header -->
      <header class="post-header">

        {{#cover}}
        <div class="post-cover">
          <figure class="post-cover">
            <img src="{{.}}" alt="{{coverAlt}}">
            {{#coverCaption}}
            <figcaption>{{.}}</figcaption>
            {{/coverCaption}}
          </figure>
        </div>
        {{/cover}}

        <div class="post-meta">
          <dl class="post-meta__grid">
            {{#dateDisplay}}
            <div class="post-meta__item">
              <dt>{{i18n.category.meta.publishedLabel}}</dt>
              <dd>{{.}}</dd>
            </div>
            {{/dateDisplay}}

            {{#readingTime}}
            <div class="post-meta__item">
              <dt>{{i18n.category.meta.readingTimeLabel}}</dt>
              <dd>{{.}} {{i18n.category.readingTimeSuffix}}</dd>
            </div>
            {{/readingTime}}
          </dl>
        </div>
      </header>
      <!-- Post Header -->

      <!-- Post Content -->
      <div class="post-body">
        <h2 class="text-lg">
          <a href="{{{canonical}}}">{{title}}</a>
        </h2>

        {{#description}}
        <p class="text-sm mb-0">
          {{.}}
        </p>
        {{/description}}
      </div>
      <!-- Post Content -->
    </article>
    {{/listing.items}}
  {{/listing.hasItems}}

  {{^listing.hasItems}}
    <p class="text-sm text-center text-[var(--muted)] italic">
      {{#listing.emptyMessage}}{{.}}{{/listing.emptyMessage}}
      {{^listing.emptyMessage}}
        {{i18n.category.emptyFallback}}
      {{/listing.emptyMessage}}
    </p>
  {{/listing.hasItems}}

  {{#listing.hasItems}}
  <nav class="mt-6 flex justify-between items-center" aria-label="Sayfa geçişleri">
    <button
      type="button"
      class="btn btn--sm btn--tone-neutral btn--icon-left"
      data-page-prev
    >
      <svg viewBox="0 0 20 20" aria-hidden="true">
        <path
          d="M13 4l-6 6 6 6"
          fill="none"
          stroke="currentColor"
          stroke-width="1.8"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
      <span>{{i18n.ui.pagination.previous}}</span>
    </button>

    <button
      type="button"
      class="btn btn--sm btn--tone-neutral btn--icon-right"
      data-page-next
    >
      <span>{{i18n.ui.pagination.next}}</span>
      <svg viewBox="0 0 20 20" aria-hidden="true">
        <path
          d="M7 4l6 6-6 6"
          fill="none"
          stroke="currentColor"
          stroke-width="1.8"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </button>
  </nav>
  {{/listing.hasItems}}
</section>
