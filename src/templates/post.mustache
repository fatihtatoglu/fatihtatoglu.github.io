  <!-- Post Header -->

  <!-- Post Content -->
  <div class="post-body">
    {{{content.html}}}
  </div>
  <!-- Post Content -->

  <!-- Post Footer -->
  <footer class="post-footer">
    {{#front.hasTags}}
    <div class="post-tags">

      {{#front.category}}
      <button class="btn btn--xs btn--tone-brand btn--icon-left">
        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 24 24">
