        </svg>
        {{i18n.category.meta.seriesTitle}}
      </p>
      {{/front.seriesListing.hasLabel}}
      <ol class="post-series__list">
        {{#front.seriesListing.items}}
        <li class="post-series__item{{#isCurrent}} is-current{{/isCurrent}}">
          {{#isPlaceholder}}
          <span class="post-series__placeholder">{{label}}</span>
          {{/isPlaceholder}}
          {{^isPlaceholder}}
            {{#isCurrent}}
            <span class="post-series__current">{{label}}</span>
            {{/isCurrent}}
            {{^isCurrent}}
              {{#hasUrl}}
              <a class="post-series__link" href="{{{url}}}">{{label}}</a>
              {{/hasUrl}}
              {{^hasUrl}}
              <span class="post-series__link">{{label}}</span>
              {{/hasUrl}}
            {{/isCurrent}}
          {{/isPlaceholder}}
        </li>
        {{/front.seriesListing.items}}
      </ol>
    </section>
    {{/front.seriesListing.hasItems}}
  </footer>
  <!-- Post Footer -->

</article>
