<article id="post-{{front.id}}" class="post" data-content-id="{{front.id}}">

  <!-- Post Header -->
  <header class="post-header">

    <div class="post-back">
      <button class="btn btn--md btn--quarter btn--tone-brand btn--icon-left" type="button" onclick="window.history.back()"
        aria-label="{{i18n.ui.backButton.aria}}">
        <svg aria-hidden="true">
          <use href="/assets/svg/icons.svg#icon-arrow-left"></use>
        </svg>
        <span>{{i18n.ui.backButton.label}}</span>
      </button>
    </div>

    {{#front.cover}}
    <div class="post-cover">
      <figure class="post-cover">
        <img src="{{{.}}}" alt="{{front.coverAlt}}">
        {{#front.coverCaption}}
        <figcaption>{{.}}</figcaption>
        {{/front.coverCaption}}
      </figure>
    </div>
    {{/front.cover}}

    <div class="post-meta">
      <dl class="post-meta__grid">
        {{#front.dateDisplay}}
        <div class="post-meta__item">
          <dt lang="{{lang}}">{{i18n.category.meta.publishedLabel}}</dt>
          <dd>{{.}}</dd>
        </div>
        {{/front.dateDisplay}}

        {{#front.readingTime}}
        <div class="post-meta__item">
          <dt lang="{{lang}}">{{i18n.category.meta.readingTimeLabel}}</dt>
          <dd>{{.}} {{i18n.category.readingTimeSuffix}}</dd>
        </div>
        {{/front.readingTime}}

        {{#front.seriesTitle}}
        <div class="post-meta__item">
          <dt lang="{{lang}}">{{i18n.category.meta.series}}</dt>
          <dd>{{.}}</dd>
        </div>
        {{/front.seriesTitle}}

        {{#isEnglish}}
        {{#front.aiTranslated}}
        <div class="post-meta__item">
          <dt lang="{{lang}}">{{i18n.category.meta.translatedBy}}</dt>
          <dd>{{.}}</dd>
        </div>
        {{/front.aiTranslated}}

        {{^front.aiTranslated}}
        <div class="post-meta__item">
          <dt lang="{{lang}}">{{i18n.category.meta.translatedBy}}</dt>
          <dd>{{site.author}}</dd>
        </div>
        {{/front.aiTranslated}}
        {{/isEnglish}}
      </dl>
    </div>

  </header>
  <!-- Post Header -->

  <!-- Post Content -->
  <div class="post-body">
    {{{content.html}}}
  </div>
  <!-- Post Content -->

  <!-- Post Footer -->
  <footer class="post-footer">
    {{> components/section_tags }}

    {{> components/section_series }}

    {{> components/section_operations }}

    {{> components/section_comments }}
  </footer>
  <!-- Post Footer -->

</article>