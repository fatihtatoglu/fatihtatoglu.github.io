                </g>
              </svg>
            </button>
            {{/copy}}
          {{/enabled}}
        {{/share}}
      {{/enabled}}
    {{/site.features.postOperations}}
    </div>
    
  </header>
  <!-- Post Header -->

  <!-- Post Content -->
  <div class="post-body">
    {{{content.html}}}
  </div>
  <!-- Post Content -->

  <!-- Post Footer -->
  <footer class="post-footer">
    {{#front.hasTags}}
    <div class="post-tags">

      {{#front.categoryUrl}}
      <a class="btn btn--xs btn--tone-brand btn--icon-left" href="{{{front.categoryUrl}}}">
        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 18 18">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M15.298 7C16.7769 7 17.8526 8.40119 17.4717 9.82923L16.3708 13.9578C16.0503 15.1626 14.9597 16 13.714 16H4.28698C3.04143 16 1.95093 15.1628 1.63032 13.9582L0.529335 9.82933C0.148492 8.40165 1.22442 7.00141 2.70077 7L15.298 7Z" fill="currentColor" fill-opacity="0.4" data-color="color-2"></path>
