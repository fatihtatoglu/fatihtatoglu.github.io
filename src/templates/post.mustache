<article id="post-{{front.id}}" class="post">

  <!-- Post Header -->
  <header class="post-header">

    <div class="post-back">
      <button
        class="btn btn--xs btn--tone-neutral btn--icon-left"
        type="button"
        onclick="window.history.back()"
        aria-label="{{i18n.ui.backButton.aria}}">
        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="16px" height="16px" viewBox="0 0 20 20">
          <path d="M13 4l-6 6 6 6" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>{{i18n.ui.backButton.label}}</span>
      </button>
    </div>

    {{#front.cover}}
    <div class="post-cover">
      <figure class="post-cover">
        <img src="{{.}}" alt="{{front.coverAlt}}">
        {{#front.coverCaption}}
        <figcaption>{{.}}</figcaption>
        {{/front.coverCaption}}
      </figure>
    </div>
    {{/front.cover}}

    <div class="post-meta">
      <dl class="post-meta__grid">
        {{#front.dateDisplay}}
        <div class="post-meta__item">
            <dt lang="{{lang}}">{{i18n.category.meta.publishedLabel}}</dt>
            <dd>{{.}}</dd>
        </div>
        {{/front.dateDisplay}}

        {{#front.readingTime}}
        <div class="post-meta__item">
            <dt lang="{{lang}}">{{i18n.category.meta.readingTimeLabel}}</dt>
            <dd>{{.}} {{i18n.category.readingTimeSuffix}}</dd>
        </div>
        {{/front.readingTime}}

        {{#front.seriesTitle}}
        <div class="post-meta__item">
            <dt lang="{{lang}}">{{i18n.category.meta.series}}</dt>
            <dd>{{.}}</dd>
        </div>
        {{/front.seriesTitle}}

        {{#front.aiTranslated}}
        <div class="post-meta__item">
            <dt lang="{{lang}}">{{i18n.category.meta.translatedBy}}</dt>
            <dd>{{.}}</dd>
        </div>
        {{/front.aiTranslated}}

        {{^front.aiTranslated}}
        <div class="post-meta__item">
            <dt lang="{{lang}}">{{i18n.category.meta.translatedBy}}</dt>
            <dd>{{site.author}}</dd>
        </div>
        {{/front.aiTranslated}}
      </dl>
    </div>

    <div class="post-operations {{#site.features.postOperations}}{{^enabled}}py-2{{/enabled}}{{/site.features.postOperations}}">
    {{#site.features.postOperations}}
      {{#enabled}}
        {{#like}}
        <button class="btn btn--xs btn--icon btn--tone-sage" type="button" data-action="like"
          aria-label="{{i18n.post.operations.like.aria}}"
          data-post-id="{{front.id}}">
