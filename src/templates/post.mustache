        </svg>
        <span>{{label}}</span>
      </a>
      {{/front.tagLinks}}
    </div>
    {{/front.hasTags}}

    {{#front.seriesListing.hasItems}}
    <section class="post-series" {{#front.seriesListing.hasLabel}}aria-label="{{front.seriesListing.label}}"{{/front.seriesListing.hasLabel}}>
      {{#front.seriesListing.hasLabel}}
      <p class="post-series__title">
        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 18 18">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M2 7.25C2 5.73128 3.23069 4.5 4.75 4.5H13.25C14.7693 4.5 16 5.73128 16 7.25V13.25C16 14.7687 14.7693 16 13.25 16H4.75C3.23069 16 2 14.7687 2 13.25V7.25Z" fill="currentColor" fill-opacity="0.4" data-color="color-2"></path>
