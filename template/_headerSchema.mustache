<!-- Open Graph -->
    <meta property="og:locale" content="{{site-culture}}" />
    <meta property="og:title" content="{{title}}" />
    <meta property="og:type" content="article" />
    <meta property="og:description" content="{{description}}" />
    <meta property="og:url" content="{{& canonical}}" />
    <meta property="og:site_name" content="{{site-name}}" />
    <meta property="article:published_time" content="{{publish-date-datetime}}" />
    {{#category}}
    <meta property="article:section" content="{{category}}" />
    {{/category}}

    {{#tags}}
    <meta property="article:tag" content="{{& .}}" />
    {{/tags}}

    {{#image}}
    <meta property="og:image" content="{{& image}}" />
    <meta property="og:image:type" content="image/jpeg" />
    {{/image}}
<!-- Open Graph -->

<!-- Twitter Card -->
    {{#image}}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="{{& image}}" />
    <meta name="twitter:creator" content="@fatihtatoglu">
    {{/image}}
    {{^image}}
    <meta name="twitter:card" content="summarye" />
    {{/image}}
    <meta name="twitter:site" content="@fatihtatoglu" />
    <meta name="twitter:title" content="{{title}}" />
    <meta name="twitter:description" content="{{description}}" />
