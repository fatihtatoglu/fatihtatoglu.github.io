<!-- Open Graph -->
    <meta property="og:locale" content="{{site-culture}}" />
    <meta property="og:title" content="{{title}}" />
    <meta property="og:type" content="article" />
    <meta property="og:description" content="{{description}}" />
    <meta property="og:url" content="{{& canonical}}" />
    <meta property="og:site_name" content="{{site-name}}" />
    <meta property="article:published_time" content="{{publish-date-datetime}}" />
    {{#category}}
    <meta property="article:section" content="{{category}}" />
    {{/category}}

    {{#tags}}
    <meta property="article:tag" content="{{& base-path}}{{& .}}" />
    {{/tags}}

    {{#postImage}}
    <meta property="og:image" content="{{& base-path}}{{& .}}" />
    <meta property="og:image:type" content="image/jpeg" />
    {{/postImage}}
<!-- Open Graph -->

<!-- Twitter Card -->
    {{#postImage}}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="{{& base-path}}{{& .}}" />
    <meta name="twitter:creator" content="@fatihtatoglu">
    {{/postImage}}
    {{^image}}
    <meta name="twitter:card" content="summary" />
    {{/image}}
    <meta name="twitter:site" content="@fatihtatoglu" />
    <meta name="twitter:title" content="{{title}}" />
    <meta name="twitter:description" content="{{description}}" />
<!-- Twitter Card -->

<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebSite",
			"@id": "{{& base-path}}#website",
			"url": "{{& base-path}}",
			"name": "{{site-name}}",
			"description": "{{description}}",
			"publisher": {
				"@id": "{{& base-path}}/#/schema/person/9112274035621a3fbf80e30c19216034"
			},
			"inLanguage": "{{site-language}}"
		},
		{
			"@type": "WebPage",
			"@id": "{{& base-path}}#webpage",
			"url": "{{& base-path}}",
			"name": "{{title}} - {{site-name}}",
			"isPartOf": {
				"@id": "{{& base-path}}#website"
			},
			"datePublished": "{{publish-date-datetime}}",
			"inLanguage": "{{site-language}}",
			"potentialAction": [
				{
					"@type": "ReadAction",
					"target": [
						"{{& canonical}}"
					]
				}
			]
		},
		{
			"@type": "Article",
			"@id": "{{& canonical}}#article",
			"author": {
				"@id": "{{& base-path}}/#/schema/person/9112274035621a3fbf80e30c19216034"
			},
			"headline": "{{title}}",
			"datePublished": "{{publish-date-datetime}}",
			"publisher": {
				"@id": "{{& base-path}}/#/schema/person/9112274035621a3fbf80e30c19216034"
			},
			{{#postImage}}
			"thumbnailUrl": "{{& base-path}}{{& .}}",
			{{/postImage}}
			{{#category}}
			"articleSection": [
				"{{category}}"
			],
			{{/category}}
			"inLanguage": "{{site-language}}"
		},
		{
			"@type": "Person",
			"@id": "{{& base-path}}/#/schema/person/9112274035621a3fbf80e30c19216034",
			"name": "Fatih Tatoğlu",
			"url": "https://www.linkedin.com/in/fatihtatoglu/",
			"address": {
				"@type": "PostalAddress",
				"addressLocality": "İstanbul",
				"addressCountry": "Turkey"
			},
			"email": "fatih@tatoglu.net"
		}
	]
}
</script>