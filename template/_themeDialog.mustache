<div id="pnlThemeDialog" class="dialog">
    <div class="dialog-box">
        <div class="dialog-content">
            <header><span>Theme Options</span></header>
            <main>
                <table style="margin: auto;">
                    <thead>
                        <th style="width: 150px;">Colors</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="text-align: left; padding-left: 25%;">
                                <input id="rbColoraqua" name="color" type="radio" value="aqua" />
                                <label for="rbColoraqua">Aqua</label>
                                <br />
                                <input id="rbColorblack" name="color" type="radio" value="black" />
                                <label for="rbColorblack">Black</label>
                                <br />
                                <input id="rbColorblue" name="color" type="radio" value="blue" />
                                <label for="rbColorblue">Blue</label>
                                <br />
                                <input id="rbColorwhite" name="color" type="radio" value="white" />
                                <label for="rbColorwhite">White</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br />
            </main>
            <footer>
                <button id="btnThemeDialogOK" class="default" accesskey="o"><u>O</u>K</button>
            </footer>
        </div>
    </div>
</div>